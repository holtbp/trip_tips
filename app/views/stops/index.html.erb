<p id="notice"><%= notice %></p>

<h1>Listing Stops</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @stops.each do |stop| %>
      <tr>
        <td><%= link_to stop.name, getaway_stop_path(@getaway, stop) %></td>
        <td><%= link_to 'Edit', edit_getaway_stop_path(@getaway, stop) %></td>
        <td><%= link_to 'Destroy', getaway_stop_path(@getaway, stop), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Stop', new_getaway_stop_path(@getaway) %>
