<h2>Getaways</h2>
<p id="notice"><%= notice %></p>

<%= link_to 'New Getaway', new_getaway_path %>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @getaways.each do |getaway| %>
      <tr>
        <td><%= link_to getaway.name, getaway %></td>
        <td><%= link_to 'Edit', edit_getaway_path(getaway) %></td>
        <td><%= link_to 'Destroy', getaway, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>
