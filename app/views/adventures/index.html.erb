<p id="notice"><%= notice %></p>

<%= link_to 'Back', getaway_path(@getaway) %>

<h2>Adventures in <%= @stop.name %></h2>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @adventures.each do |adventure| %>
      <tr>
        <td><%= link_to adventure.sight.name, getaway_stop_adventure_path(@getaway, @stop, adventure) %></td>
        <td><%= link_to 'Edit', edit_getaway_stop_adventure_path(@getaway, @stop, adventure) %></td>
        <td><%= link_to 'Destroy', getaway_stop_adventure_path(@getaway, @stop, adventure), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Adventure', new_getaway_stop_adventure_path(@getaway, @stop) %>
