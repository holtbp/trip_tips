<p id="notice"><%= notice %></p>

<h1>Listing Sights</h1>

<table>
  <thead>
    <tr>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @sights.each do |sight| %>
      <tr>
        <td><%= link_to sight.name, sight_path(sight) %></td>
        <td><%= link_to 'Edit', edit_sight_path(sight) %></td>
        <td><%= link_to 'Destroy', sight_path(sight), method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

<%= link_to 'New Sight', new_sight_path %>
